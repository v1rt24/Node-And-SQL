<div class="container">
    <ul class="row">
        <h6>Категории:</h6>
        {{#each cats}}
            <li class="col col-sm-2">
                <a href="/cat?id={{this.id}}"><strong>{{this.category_name}}</strong></a>
            </li>
        {{/each}}
    </ul>

    <hr>

    <div class="row">
        {{#each goods}}
            <div class="col col-md-4">
                <div class="card">
                    <h3 class="card-title">{{this.name}}</h3>
                    <img src="images/{{this.image}}" alt="{{this.name}}">
                    <p class="price">{{this.cost}}</p>
                    <ul class="card-actions">
                        <li>
                            <button class="button-primary button-small addToCart" data-goods_id="{{this.id}}">
                                В корзину
                            </button>
                        </li>
                        <li>
                            <a href="/goods/{{this.name}}" class="button button-primary-text">Подробнее</a>
                        </li>
                    </ul>
                </div>
            </div>
        {{/each}}
    </div>
</div>